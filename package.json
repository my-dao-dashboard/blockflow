{
  "name": "blockflow",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc -p .",
    "clean": "rm -rf dist/ && rm -rf pkg/",
    "start": "ts-node src/main.ts",
    "lint": "prettier --check \"{src}/**/*.ts\"",
    "lint:fix": "prettier --write \"{src}/**/*.ts\"",
    "package": "yarn clean && yarn build && pkg package.json --out-path pkg/"
  },
  "bin": {
    "pusher": "dist/main.js"
  },
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/node": "^13.1.6",
    "pkg": "^4.4.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.1",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "axios-retry": "^3.1.2",
    "commander": "^4.1.0",
    "dotenv": "^8.2.0",
    "rxjs": "^6.5.4",
    "web3": "^1.2.4"
  }
}
